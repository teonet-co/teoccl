#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.
#
# teoccl: Teonet c container library
#

# SUBROUTINE
#
# AC_DEFINE_SUBST(NAME, VALUE, DESCRIPTION)
# -----------------------------------------
AC_DEFUN([AC_DEFINE_SUBST], [
AC_DEFINE([$1], [$2], [$3])
AC_SUBST([$1], ['$2'])
])

m4_define([pkg_major], [0]) dnl
m4_define([pkg_minor], [1]) dnl
m4_define([pkg_patch], [6]) dnl
m4_define([pkg_version], [pkg_major[.]pkg_minor[.]pkg_patch]) dnl

m4_define([api_version],[0])

AC_PREREQ([2.69])
AC_INIT([libteoccl0], [pkg_version], [Kirill Scherba <kirill@scherba.ru>, Max Ponka <mpano91@gmail.com>])

AC_SUBST([DOLLAR_SIGN],[$])

AC_DEFINE([PACKAGE_DESCRIPTION], ["Teonet (CCL) C Containers Library"], [Application description])
AC_DEFINE([PACKAGE_DEPENDENCIES], [""], [Application dependencies])
AC_DEFINE([LICENSES], ["[[\"MIT\",\"LGPL-3.0\"]]"], [Application package licenses])
AC_DEFINE([VCS_URL], ["https://github.com/teonet-co/teoccl.git"], [Git URL])
AC_DEFINE(COPYRIGHT, ["(c) Teonet co., 2014-2019"], [Teoccl library copyright])


PKG_INSTALLDIR


AC_DEFINE_SUBST(API_VERSION, [api_version], [api version])

AC_DEFINE_SUBST(LIBRARY_CURRENT,  1, [teoccl dynamic library version])
AC_DEFINE_SUBST(LIBRARY_REVISION, 0, [teoccl dynamic library version])
AC_DEFINE_SUBST(LIBRARY_AGE,      2, [teoccl dynamic library version])

AC_DEFINE_SUBST(LIBRARY_MAJOR_VERSION, [pkg_major], [pack ver])
AC_DEFINE_SUBST(LIBRARY_MINOR_VERSION, [pkg_minor], [pack ver])
AC_DEFINE_SUBST(LIBRARY_PATCH_VERSION, [pkg_patch], [pack ver])


AC_CONFIG_HEADERS([config.h])
AC_CONFIG_SRCDIR([src/teoccl/queue.c])
AC_CONFIG_MACRO_DIR([m4])
AC_CONFIG_AUX_DIR([build-aux])


AM_INIT_AUTOMAKE([-Wall -Werror foreign subdir-objects]) 
AM_SILENT_RULES([yes])


AC_PROG_CC
AC_PROG_CXX
m4_ifdef([AM_PROG_AR], [AM_PROG_AR])

LT_PREREQ([2.4])
LT_INIT

DX_DOXYGEN_FEATURE(ON)
DX_HTML_FEATURE(ON)
DX_CHM_FEATURE(OFF)
DX_CHI_FEATURE(OFF)
DX_MAN_FEATURE(OFF)
DX_RTF_FEATURE(OFF)
DX_XML_FEATURE(OFF)
DX_PDF_FEATURE(OFF)
DX_PS_FEATURE(OFF)
DX_INIT_DOXYGEN(TeoCCl, Doxyfile, docs)


AC_CONFIG_FILES([
        Makefile
        src/libteoccl-$API_VERSION.pc:src/libteoccl.pc.in
        src/Makefile
        tools/Makefile
        tests/Makefile
])
AC_OUTPUT

